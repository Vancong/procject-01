extends ../../layout/default.pug
include ../../mixins/box-header.pug
block main
  .container.my-3
    .row
      .col-6.mx-auto
        +box-head(pageTitle)

        form(
          action="/user/password/reset?_method=PATCH"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Nhập mật khẩu mới
            input(
              type="password"
              class="form-control password-toggle"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            input(type="checkbox" 
                  id="password-toggle"
            ) 
            label(for="password-toggle") Hiển thị mật khẩu
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Tiếp tục