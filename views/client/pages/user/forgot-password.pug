extends ../../layout/default.pug
include ../../mixins/box-header.pug
block main
  .container.my-3
    .row
      .col-6.mx-auto
        +box-head(pageTitle)

        form(
          action="/user/password/forgot?_method=PATCH"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Tiếp tục