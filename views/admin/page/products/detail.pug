extends ../../layout/default.pug
block main
  if (product.title)
    h1(class="mb-4") #{product.title}

  if (product.price)
    div(class="mb-4") Giá: <b>#{product.price}$</b>

  if (product.discountPercentage)
    div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

  if (product.stock)
    div(class="mb-4") Còn lại: <b>#{product.stock}</b>

  if (product.thumbnail)
    div(class="mb-4")
      img(
        src=product.thumbnail
        style="width: 100px"
      )

  if (product.status)
    div(class="mb-4")
      span Trạng thái:
      if (product.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng hoạt động

  if (product.position)
    div(class="mb-4") Vị trí: <b>#{product.position}</b>

  if(product.createByFullName) 
    div(class="mb-4") 
     b Được tạo bởi :
     p <b>#{product.permissionsCreate}: </b> #{product.createByFullName}
     p Thời gian: #{product.createAtForMat}
  
  if(product.updateByFullName) 
    div(class="mb-4") 
      b Cập nhật bởi :
      p <b>#{product.permissionsUpdate}: </b> #{product.updateByFullName}
      p Thời gian: #{product.updateAtForMat}

  if (product.description)
    div(class="mb-4") !{product.description}
