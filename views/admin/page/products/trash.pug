extends ../../layout/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
  - if (messages.success)
    div(
      class="alert alert-success show-alert"
      show-alert="3000"
    ) #{messages.success}
  h1(class="mb-4") Thùng Rác
    .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row 
        .col-6
          +filter-status(filterStatus)
        .col-6
          +search(keyword)
  .card.mb-3
    .card-header Hành động
    .card-body
      div(class="input-group" box-actions)
        select(class="custom-select")
          option(value='') Chọn hành động...
          option(value='back') Khôi Phục
          option(value='deleteAll') Xóa Vĩnh Viễn
        .input-group-append
          button(
            class="btn btn-outline-secondary"
            type='button'
          ) Áp dụng

  .card.mb-3
    .card-header Danh sach
    .card-body
      table.table.table-hover.table-sm
        thead
          tr
            th 
              input(
                type="checkbox"
                name="checkboxAll"
                
              )
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động

        tbody
          each item,index in products
            tr 
              td
                input(
                  type="checkbox"
                  name="checkboxItem"
                  value=item.id
                )
              td #{index+1}
              td
                img(
                  src=item.thumbnail
                  alt=`Sản phẩm ${index+1}`
                  width="80px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                if(item.status == 'active')
                  button(
                    link=`${prefixAdmin}/product/change-status/inactive/${item.id}`
                    class="badge badge-success"
                    button-change-status
                  ) Hoạt động
                else 
                  button( 
                    link=`${prefixAdmin}/product/change-status/active/${item.id}`
                    class="badge badge-danger"
                    button-change-status
                  ) Dừng hoạt động
              td
                button(class="btn btn-warning btn-sm"
                       button-back=item.id
                ) Khôi Phục
                button(class="btn btn-danger btn-sm ml-1" 
                       button-deleteVv=item.id
                        
                ) Xóa Vĩnh Viễn
            tr
  +pagination(pagination)