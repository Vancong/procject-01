extends ../../layout/default
block main
  h1(class="mb-4") Thùng Rác
  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4.text-right
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Avatar
            th Họ tên
            th Phân quyền
            th Email
            th Hành động

        tbody
          each item, index in accounts
            tr 
              td #{index+1}
              td
                img(
                  src=item.avatar
                  alt=item.fullName
                  width="100px"
                  height="auto"
                )
              td #{item.fullName}
              td #{item.roleTitle}
              td #{item.email}           
              td        
                button(
                  class="btn btn-warning btn-sm ml-1"
                  back-acc=item.id
                  link=`${prefixAdmin}/accounts/trash/back/${item.id}`
                ) Khôi Phục
                button(
                  class="btn btn-danger btn-sm ml-1"
                  deleted-vv=item.id
                  link=`${prefixAdmin}/accounts/trash/deletedVv/${item.id}`
                ) Xóa Vĩnh Viễn